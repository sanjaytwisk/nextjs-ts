{
  "name": "nextjs-boilerplate",
  "version": "1.1.0",
  "description": "NextJS boilerplate with TypeScript and Redux",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:dev": "NODE_ENV=test jest --watchAll",
    "start": "NODE_ENV=production PORT=$PORT node ./.next/production-server/index.js",
    "build": "rm -rf .next && next build && tsc --project tsconfig.server.json",
    "dev": "nodemon server/index.ts",
    "export": "npm run build && next export",
    "prettier": "prettier  --write **/*.{ts,tsx,js,jsx}",
    "lint:ts": "npm run prettier && tslint -c tslint.json -t stylish --fix {pages,src,server}/**/*.{ts,tsx}",
    "lint:scss": "stylelint --fix {src,pages}/**/*.scss",
    "lint:types": "tsc -p . --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:types",
      "pre-push": "npm run test",
      "post-merge": "sh hooks/post-merge.sh",
      "post-rewrite": "sh hooks/post-merge.sh"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:ts",
      "git add"
    ],
    "*.scss": [
      "npm run lint:scss",
      "git add"
    ]
  },
  "keywords": [
    "nextjs",
    "boilerplate",
    "typeccript",
    "react",
    "redux",
    "prettier",
    "stylelint",
    "jest",
    "enzyme",
    "svg sprite",
    "husky",
    "lint staged"
  ],
  "author": "Sanjay Twisk",
  "repository": {
    "type": "git",
    "url": "git@github.com:sanjaytwisk/nextjs-ts.git"
  },
  "license": "ISC",
  "dependencies": {
    "next": "^8.1.0",
    "next-compose-plugins": "^2.2.0",
    "next-redux-wrapper": "^2.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "svg-sprite-loader": "^4.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@types/jest": "^24.0.15",
    "@types/next": "^8.0.5",
    "@types/next-redux-wrapper": "^2.0.2",
    "@types/react": "^16.8.23",
    "@types/svg-sprite-loader": "^3.9.1",
    "@zeit/next-sass": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "acorn": "^6.2.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "fork-ts-checker-webpack-plugin": "^1.3.7",
    "husky": "^3.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^9.0.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-scss": "^3.9.0",
    "svgo": "^1.2.2",
    "svgo-loader": "^2.2.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2"
  }
}
