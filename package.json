{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "description": "NextJS boilerplate with TypeScript and Redux",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:dev": "NODE_ENV=test jest --watchAll",
    "start": "NODE_ENV=production PORT=$PORT node ./.next/production-server/index.js",
    "build": "rm -rf .next && next build && tsc --project tsconfig.server.json",
    "dev": "nodemon server/index.ts",
    "export": "npm run build && next export",
    "prettier": "prettier  --write **/*.{ts,tsx,js}",
    "lint:ts": "npm run prettier && tslint -c tslint.json -t stylish --fix {pages,src,server}/**/*.{ts,tsx}",
    "lint:scss": "stylelint --fix {src,pages}/**/*.scss",
    "lint:types": "tsc -p . --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:types",
      "pre-push": "npm run test",
      "post-merge": "sh hooks/post-merge.sh",
      "post-rewrite": "sh hooks/post-merge.sh"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:ts",
      "git add"
    ],
    "*.scss": [
      "npm run lint:scss",
      "git add"
    ]
  },
  "keywords": [
    "nextjs",
    "boilerplate",
    "typeccript",
    "react",
    "redux",
    "prettier",
    "stylelint",
    "jest",
    "enzyme",
    "svg sprite",
    "husky",
    "lint staged"
  ],
  "author": "Sanjay Twisk",
  "repository": {
    "type": "git",
    "url": "git@github.com:sanjaytwisk/nextjs-ts.git"
  },
  "license": "ISC",
  "dependencies": {
    "next": "9.5.2",
    "next-compose-plugins": "2.2.0",
    "next-redux-wrapper": "6.0.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.0",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-thunk": "2.3.0",
    "svg-sprite-loader": "4.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.5",
    "@types/react": "16.9.27",
    "@types/react-redux": "7.1.7",
    "@types/svg-sprite-loader": "3.9.1",
    "@zeit/next-sass": "1.0.1",
    "acorn": "7.1.1",
    "babel-core": "6.26.3",
    "babel-jest": "25.2.4",
    "babel-loader": "8.1.0",
    "babel-plugin-module-resolver": "4.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "husky": "4.2.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.2.4",
    "jest-svg-transformer": "1.0.0",
    "lint-staged": "10.1.0",
    "node-sass": "4.13.1",
    "nodemon": "2.0.2",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.0.2",
    "stylelint": "13.2.1",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-scss": "3.16.0",
    "svgo": "1.3.2",
    "svgo-loader": "2.2.1",
    "ts-node": "8.8.1",
    "tslint": "6.1.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "4.2.0",
    "typescript": "3.8.3"
  }
}
